  "vim.useCtrlKeys": true, //启用 Vim ctrl 键覆盖常见的 VS 代码操作，例如复制、粘贴、查找等。
  "vim.cursorStylePerMode": {
    "Normal": "Block",
    "Insert": "Line",
    "Visual": "Block-outline",
    "VisualBlock": "Block-outline",
    "VisualLine": "Block-outline",
    "Replace": "Underline",
  },
  "vim.hlsearch": true, //查询结果高亮
