  "vim.normalModeKeyBindingsNonRecursive": [
    //{ "before": ["J"], "commands": [":.+10"], "silent": true },
    //{ "before": ["K"], "commands": [":.-10"], "silent": true }
    { "before": ["J"], "after": ["1", "0", "j"] }, //加速向下
    { "before": ["K"], "after": ["1", "0", "k"] }, //加速向上
    { "before": ["<leader>", "s"], "commands": [":w"] }, // 设定\+s保存文件
    { "before": ["<leader>", "q"], "commands": [":q"] }, // 设定\+q关闭文件
    { "before": ["<leader>", "l"], "commands": [":nohlsearch"] }, // 设定\+l关闭高亮
    //{ "before": ["<Leader>", "h"], "after": ["<C-w>", "h"] }, //移动到左边的窗口
    //{ "before": ["<Leader>", "j"], "after": ["<C-w>", "j"] }, //移动到下边的窗口
    //{ "before": ["<Leader>", "k"], "after": ["<C-w>", "k"] }, //移动到上边的窗口
    //{ "before": ["<Leader>", "l"], "after": ["<C-w>", "l"] }, //移动到右边的窗口
    { "before": ["n"], "after": ["n", "z", "z"] }, // 在画面中央表示搜索结果
    { "before": ["N"], "after": ["N", "z", "z"] },
    { "before": ["*"], "after": ["*", "z", "z"] },
    { "before": ["#"], "after": ["#", "z", "z"] }
  ],
  "vim.visualModeKeyBindingsNonRecursive": [
    { "before": ["J"], "after": ["1", "0", "j"] }, //加速向下
    { "before": ["K"], "after": ["1", "0", "k"] } //加速向上
  ],
  "vim.insertModeKeyBindings": [
    { "before": ["j", "j"], "after": ["<Esc>"] }, //回到普通模式
    { "before": [";", ";"], "commands": ["editor.action.triggerSuggest"] } //打开建议
