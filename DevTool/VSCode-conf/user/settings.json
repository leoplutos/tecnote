      "env": {
        "TEST_HOME": "D:\\Work",
        "PATH": "${env:path};D:\\Tools\\WorkTool\\Java\\jdk17.0.6\\bin;D:\\Tools\\WorkTool\\Python\\Python38-32;D:\\Tools\\WorkTool\\Team\\Git\\cmd"
      },
      "icon": "terminal-cmd",
      "color": "terminal.ansiBlue"
    },
