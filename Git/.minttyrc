#
# .minttyrc - Configuration file for mintty terminal
#

#基础设定
BoldAsFont=no
Locale=C
Charset=UTF-8
#Font=Inconsolata
#Font=ＭＳ ゴシック
Font=JetBrains Mono
FontHeight=14
Language=zh_CN
CursorType=block
Columns=120
Rows=40
X=200
Y=50
MiddleClickAction=extend
RightClickAction=paste
CopyAsRTF=no
PgUpDnScroll=yes
BoldAsColour=no
CopyTab=yes
RewrapOnResize=yes

#终端颜色设定
BackgroundColour=29,31,33
ForegroundColour=218,218,218
CursorColour=0,255,255
Black=0,0,0
BoldBlack=102,102,102
Red=205,49,49
BoldRed=241,76,76
Green=13,188,121
BoldGreen=35,209,139
Yellow=229,229,16
BoldYellow=245,245,67
Blue=36,114,200
BoldBlue=59,142,234
Magenta=188,63,188
BoldMagenta=214,112,214
Cyan=17,168,205
BoldCyan=41,184,219
White=229,229,229
BoldWhite=229,229,229

#Charwidth=unicode
#内置的宽度属性，假设宽度不明确的字符是宽的。（对应于 xterm 资源cjkWidth:true。）
Charwidth=ambig-wide

#鼠标自动隐藏
HideMouse=yes

#TabBar=5
#NewTabs=1
#SessionGeomSync=3

#备用字体，中日韩使用Font5,中文使用Font6（版本>3.0.2）
FontChoice=CJK:5;Han:6;
Font5=MS Gothic
Font6=新宋体
#Font6=ＭＳ ゴシック

#方案1
#Ctrl + F1:输出clearb
#Ctrl + F2:打开新tab
#Ctrl + F3:发行命令echo -n `date`
#KeyFunctions=C+F1:"clearb";C+F2:new-tab-cwd;C+F3:`echo -n `date``;
#方案2
#Ctrl + F1:输出clearb
#Ctrl + F2:输出gdb的dashboard命令-重定向代码
#Ctrl + F3:输出gdb的dashboard命令-设定代码全屏显示
KeyFunctions=C+F1:"clearb";C+F2:"dashboard source -output /dev/pts/x";C+F3:"dashboard source -style height 0";
