#
# .minttyrc - Configuration file for mintty terminal
#

#BoldAsFont=-1
Font=Inconsolata
FontHeight=14
Locale=C
Charset=UTF-8
CursorType=block
Columns=120
Rows=30
Language=zh_CN
MiddleClickAction=extend
RightClickAction=paste

CopyAsRTF=no
PgUpDnScroll=yes
FontWeight=400

BackgroundColour=0,0,0
ForegroundColour=191,191,191
CursorColour=0,255,255

HideMouse=on
#TabBar=5
#SessionGeomSync=3
#备用字体，中日韩使用Font5,中文使用Font6
FontChoice=CJK:5;Han:6;
Font5=MS Gothic
Font6=新宋体

#Ctrl + F1:输出clearb
#Ctrl + F2:打开新tab
#Ctrl + F3:输出date命令结果
KeyFunctions=C+F1:"clearb";C+F2:new-tab-cwd;C+F3:`echo -n `date``;
