{
	"version": "2.0.0",
	"options": { //tasks.json定义的所有内容都使用cmd运行
		"shell": {
			"executable": "cmd.exe",
			"args": [
				"/d",
				"/c"
			]
		},
		"env": { //自定义环境变量
			"CARGO_HOME": "D:\\Tools\\WorkTool\\Rust\\Rust_gnu_1.79",
			"RUSTUP_HOME": "D:\\Tools\\WorkTool\\Rust\\Rust_gnu_1.79",
			"RUSTUP_DIST_SERVER": "https://mirrors.ustc.edu.cn/rust-static",
			"RUSTUP_UPDATE_ROOT": "https://mirrors.ustc.edu.cn/rust-static/rustup",
			// 设定 CARGO_HOME 和 protoc 到PATH
			"PATH": "${env:path};D:\\Tools\\WorkTool\\Rust\\Rust_gnu_1.79\\bin;D:\\Tools\\WorkTool\\Build\\protoc-win64\\bin",
		}
	},
	"tasks": [
		{
			"label": "cargo_build",
			"type": "shell",
			"command": "cargo",
			"args": [
				"build",
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [],
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": true,
				"panel": "new"
			}
		},
		{
			"label": "cargo_run",
			"type": "shell",
			"command": "cargo",
			"args": [
				"run",
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [],
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": true,
				"panel": "new"
			}
		},
	]
}
