{
	"version": "2.0.0",
	"windows": {
		"options": { //tasks.json定义的所有内容都使用cmd运行
			"shell": {
				"executable": "cmd.exe",
				"args": [
					"/d",
					"/c"
				]
			},
			"env": { //自定义环境变量
				"BUN_RUNTIME_TRANSPILER_CACHE_PATH": "0", //禁用运行时转换器缓存
				"FASTIFY_AUTOLOAD_TYPESCRIPT": "1", //开启fastify-autoload对typescript的支持
				"PATH": "${env:path};D:/Tools/WorkTool/Web/bun-windows-x64"
			}
		},
	},
	"linux": {
		"options": { //tasks.json定义的所有内容都使用bash运行
			"shell": {
				"executable": "bash",
			},
			"env": { //自定义环境变量
				"BUN_RUNTIME_TRANSPILER_CACHE_PATH": "0", //禁用运行时转换器缓存
				"FASTIFY_AUTOLOAD_TYPESCRIPT": "1", //开启fastify-autoload对typescript的支持
			}
		},
	},
	"presentation": {
		"echo": true,
		"reveal": "always",
		"focus": true,
		"panel": "new"
	},
	"tasks": [
		{
			"label": "bun_install",
			"type": "shell",
			"command": "bun",
			"args": [
				"install",
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [],
			"detail": "Bun解决依赖",
		},
		{
			"label": "bun_build",
			"type": "shell",
			"command": "bun",
			"args": [
				"run",
				"build",
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$tsc"
			],
			"detail": "编译: bun x tsc -p tsconfig.json",
		},
		{
			"label": "bun_dev",
			"type": "shell",
			"command": "bun",
			"args": [
				"run",
				"dev",
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [],
			"detail": "运行app.ts",
		},
	]
}
