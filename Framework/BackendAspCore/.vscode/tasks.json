{
	"version": "2.0.0",
	"windows": {
		"options": { //tasks.json定义的所有内容都使用cmd运行
			"shell": {
				"executable": "cmd.exe",
				"args": [
					"/d",
					"/c"
				]
			},
			"env": { //自定义环境变量
			}
		},
	},
	"linux": {
		"options": { //tasks.json定义的所有内容都使用bash运行
			"shell": {
				"executable": "bash",
			},
			"env": { //自定义环境变量
			}
		},
	},
	"presentation": {
		"echo": true,
		"reveal": "always",
		"focus": true,
		"panel": "new"
	},
	"tasks": [
		{
			"label": "dotnet_restore",
			"type": "process",
			"command": "dotnet",
			"args": [
				"restore",
			],
			"problemMatcher": "$msCompile",
			"detail": "下载依赖",
		},
		{
			"label": "dotnet_build",
			"type": "process",
			"command": "dotnet",
			"args": [
				"build",
				"${workspaceFolder}/BackendAspCore.sln",
				"/property:GenerateFullPaths=true",
				"/consoleloggerparameters:NoSummary"
			],
			"problemMatcher": "$msCompile",
			"detail": "编译工程",
		},
		{
			// -p:PublishSingleFile=true 单文件发布
			// --self-contained true 将运行时包含在发布文件内
			// -p:DebugType=none -p:DebugSymbols=false 不生成pdb文件
			// -p:PublishTrimmed=true 剪裁
			// -p:EnableCompressionInSingleFile=true 启用压缩
			"label": "dotnet_publish",
			"type": "process",
			"command": "dotnet",
			"args": [
				"publish",
				"${workspaceFolder}/BackendAspCore.sln",
				"/property:GenerateFullPaths=true",
				"/consoleloggerparameters:NoSummary",
				"-p:PublishSingleFile=true",
				"-p:DebugType=none",
				"-p:DebugSymbols=false",
				"--self-contained",
				"true"
			],
			"problemMatcher": "$msCompile",
			"detail": "发布单文件工程",
		},
		{
			"label": "dotnet_watch",
			"type": "process",
			"command": "dotnet",
			"args": [
				"watch",
				"run",
				"--project",
				"${workspaceFolder}/BackendAspCore.sln"
			],
			"problemMatcher": "$msCompile",
			"detail": "监视运行",
		},
		{
			"label": "run_Server",
			"type": "shell",
			"command": "dotnet",
			"args": [
				"run",
				"--project",
				"AspWebapi",
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": "$msCompile",
			"detail": "运行服务端",
		},
	]
}
