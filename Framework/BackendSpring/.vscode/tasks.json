{
	"version": "2.0.0",
	"windows": {
		"options": {
			"shell": {
				"executable": "cmd.exe",
				"args": [
					"/d",
					"/c"
				]
			},
			"env": { //在这里自定义环境变量
				// 开启Java21 分代ZGC [-XX:+UseZGC -XX:+ZGenerational] 查看GC信息 [-XX:+PrintGCDetails]
				"JAVA_TOOL_OPTIONS": "-Duser.language=en -Dfile.encoding=UTF-8 -XX:+UseZGC -XX:+ZGenerational",
				"JAVA_HOME": "D:\\Tools\\WorkTool\\Java\\jdk-21.0.3+9",
				"MAVEN_HOME": "D:\\Tools\\WorkTool\\Java\\apache-maven-3.9.7",
				"PATH": "${env:path};${env:JAVA_HOME}\\bin;D:\\Tools\\WorkTool\\Java\\apache-maven-3.9.7\\bin;",
			}
		}
	},
	"tasks": [
		{
			"label": "start_springboot",
			"type": "shell",
			"command": "mvn",
			"args": [
				"spring-boot:run",
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [],
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": true,
				"panel": "new"
			},
			"group": {
				"kind": "build",
				"isDefault": true
			},
		},
		{
			"label": "build_jar",
			"type": "shell",
			"command": "mvn",
			"args": [
				"clean",
				"package",
				"-Dmaven.test.skip=true",
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [],
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": true,
				"panel": "new"
			},
			"group": {
				"kind": "build",
				"isDefault": false
			},
		},
	]
}
