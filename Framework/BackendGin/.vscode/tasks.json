{
	"version": "2.0.0",
	"options": { //tasks.json定义的所有内容都使用cmd运行
		"shell": {
			"executable": "cmd.exe",
			"args": [
				"/d",
				"/c"
			]
		},
		"env": { //自定义环境变量
			"GOPATH": "D:\\Tools\\WorkTool\\Go\\go_global",
			"GO111MODULE": "on",
			"PATH": "${env:path};D:\\Tools\\WorkTool\\Go\\go1.22.5.windows-amd64\\bin",
		}
	},
	"tasks": [
		{
			"label": "go_build",
			"type": "shell",
			"command": "go",
			"args": [
				"build",
				"-o",
				"./bin/BackendGin.exe",
				"./src/main.go",
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [],
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": true,
				"panel": "new"
			}
		},
		{
			"label": "go_run",
			"type": "shell",
			"command": ".\\bin\\BackendGin.exe",
			"args": [],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [],
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": true,
				"panel": "new"
			}
		},
	]
}
