{
	"version": "2.0.0",
	"windows": {
		"options": { //tasks.json定义的所有内容都使用cmd运行
			"shell": {
				"executable": "cmd.exe",
				"args": [
					"/d",
					"/c"
				]
			},
			"env": { //自定义环境变量
				"GOROOT": "D:\\Tools\\WorkTool\\Go\\go1.22.5.windows-amd64",
				"GOPATH": "D:\\Tools\\WorkTool\\Go\\go_global",
				"GO111MODULE": "on",
				"PATH": "${env:path};D:\\Tools\\WorkTool\\Go\\go1.22.5.windows-amd64\\bin;D:\\Tools\\WorkTool\\Go\\go_global;D:\\Tools\\WorkTool\\Build\\buf",
			}
		},
	},
	"linux": {
		"options": { //tasks.json定义的所有内容都使用bash运行
			"shell": {
				"executable": "bash",
			},
			"env": { //自定义环境变量
				"GO111MODULE": "on",
			}
		},
	},
	"presentation": {
		"echo": true,
		"reveal": "always",
		"focus": true,
		"panel": "new"
	},
	"tasks": [
		{
			"label": "buf_generate",
			"type": "shell",
			"command": "buf",
			"args": [
				"generate",
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [],
		},
		{
			"label": "go_mod_tidy",
			"type": "shell",
			"command": "go",
			"args": [
				"mod",
				"tidy",
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [],
		},
		{
			"label": "go_build_server",
			"type": "shell",
			"command": "go",
			"args": [
				"build",
				"-o",
				"./bin/server",
				"./product/server/main.go",
			],
			"windows": {
				"command": "go",
				"args": [
					"build",
					"-o",
					"./bin/server.exe",
					"./product/server/main.go",
				],
			},
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [],
		},
		{
			"label": "go_run_server",
			"type": "shell",
			"command": "./bin/server",
			"windows": {
				"command": ".\\bin\\server.exe"
			},
			"args": [],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [],
		},
		{
			"label": "go_build_client",
			"type": "shell",
			"command": "go",
			"args": [
				"build",
				"-o",
				"./bin/client",
				"./product/client/main.go",
			],
			"windows": {
				"command": "go",
				"args": [
					"build",
					"-o",
					"./bin/client.exe",
					"./product/client/main.go",
				],
			},
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [],
		},
		{
			"label": "go_run_client",
			"type": "shell",
			"command": "./bin/client",
			"windows": {
				"command": ".\\bin\\client.exe"
			},
			"args": [],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [],
		},
	]
}
