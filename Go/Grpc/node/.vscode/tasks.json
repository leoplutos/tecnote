{
	"version": "2.0.0",
	"options": { //tasks.json定义的所有内容都使用cmd运行
		"shell": {
			"executable": "cmd.exe",
			"args": [
				"/d",
				"/c"
			]
		},
		"env": { //自定义环境变量
			// 添加 bun
			"PATH": "${env:path};D:/Tools/WorkTool/Web/bun-windows-x64;D:/Tools/WorkTool/Web/node-v20.15.1-win-x64;"
		}
	},
	"tasks": [
		{
			"label": "buf_generate",
			"type": "shell",
			"command": "bun",
			"args": [
				"run",
				"generate",
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [],
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": true,
				"panel": "new"
			}
		},
		{
			"label": "bun_build",
			"type": "shell",
			"command": "bun",
			"args": [
				"run",
				"build",
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"detail": "bun x tsc -p tsconfig.json",
			"problemMatcher": [
				"$tsc"
			],
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": true,
				"panel": "new"
			}
		},
		{
			"label": "node_runServer",
			"type": "shell",
			"command": "node",
			"args": [
				"dist/server.js",
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"detail": "node dist/server.js",
			"problemMatcher": [
				"$tsc"
			],
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": true,
				"panel": "new"
			}
		},
		{
			"label": "node_runClient",
			"type": "shell",
			"command": "node",
			"args": [
				"dist/client.js",
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"detail": "node dist/client.js",
			"problemMatcher": [
				"$tsc"
			],
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": true,
				"panel": "new"
			}
		},
	]
}
