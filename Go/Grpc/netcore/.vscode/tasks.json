{
	"version": "2.0.0",
	"options": { //tasks.json定义的所有内容都使用cmd运行
		"shell": {
			"executable": "cmd.exe",
			"args": [
				"/d",
				"/c"
			]
		},
		"env": { //自定义环境变量
		}
	},
	"tasks": [
		{
			"label": "run_grpc_Server",
			"type": "shell",
			"command": "dotnet",
			"args": [
				"run",
				"--project",
				"netcoreServer",
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": "$msCompile",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": true,
				"panel": "new"
			},
		},
		{
			"label": "run_grpc_Client",
			"type": "shell",
			"command": "dotnet",
			"args": [
				"run",
				"--project",
				"netcoreClient",
				"--",
				"Sync",
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": "$msCompile",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": true,
				"panel": "new"
			},
		},
		{
			"label": "run_grpc_ClientAsync",
			"type": "shell",
			"command": "dotnet",
			"args": [
				"run",
				"--project",
				"netcoreClient",
				"--",
				"Async",
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": "$msCompile",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": true,
				"panel": "new"
			},
		},
	]
}
