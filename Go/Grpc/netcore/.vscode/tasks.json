{
	"version": "2.0.0",
	"windows": {
		"options": { //tasks.json定义的所有内容都使用cmd运行
			"shell": {
				"executable": "cmd.exe",
				"args": [
					"/d",
					"/c"
				]
			},
			"env": { //自定义环境变量
				// 是否启用服务发现
				"GRPC_SERVER_RESOLVE": "false",
				// 是否启用OpenTelemetry遥测
				"GRPC_SERVER_OTEL": "false",
				// Traces（追踪）的导出器
				"OTEL_TRACES_EXPORTER": "otlp",
				// Metrics（指标/度量）的导出器
				"OTEL_METRICS_EXPORTER": "otlp",
				//  Logs（日志）的导出器
				"OTEL_LOGS_EXPORTER": "none",
				// 所有遥测数据的 OTLP 传输协议
				"OTEL_EXPORTER_OTLP_PROTOCOL": "grpc",
				// OpenTelemetry Collector的URL
				"OTEL_EXPORTER_OTLP_ENDPOINT": "http://localhost:4317",
				// OpenTelemetry 打开对 gRPC 请求的实验性支持
				"OTEL_DOTNET_EXPERIMENTAL_ASPNETCORE_ENABLE_GRPC_INSTRUMENTATION": "true",
			}
		},
	},
	"linux": {
		"options": { //tasks.json定义的所有内容都使用bash运行
			"shell": {
				"executable": "bash",
			},
			"env": { //自定义环境变量
				// 是否启用服务发现
				"GRPC_SERVER_RESOLVE": "false",
				// 是否启用OpenTelemetry遥测
				"GRPC_SERVER_OTEL": "false",
				// Traces（追踪）的导出器
				"OTEL_TRACES_EXPORTER": "otlp",
				// Metrics（指标/度量）的导出器
				"OTEL_METRICS_EXPORTER": "otlp",
				//  Logs（日志）的导出器
				"OTEL_LOGS_EXPORTER": "none",
				// 所有遥测数据的 OTLP 传输协议
				"OTEL_EXPORTER_OTLP_PROTOCOL": "grpc",
				// OpenTelemetry Collector的URL
				"OTEL_EXPORTER_OTLP_ENDPOINT": "http://localhost:4317",
				// OpenTelemetry 打开对 gRPC 请求的实验性支持
				"OTEL_DOTNET_EXPERIMENTAL_ASPNETCORE_ENABLE_GRPC_INSTRUMENTATION": "true",
			}
		},
	},
	"presentation": {
		"echo": true,
		"reveal": "always",
		"focus": true,
		"panel": "new"
	},
	"tasks": [
		{
			"label": "dotnet_restore",
			"type": "process",
			"command": "dotnet",
			"args": [
				"restore",
			],
			"problemMatcher": "$msCompile"
		},
		{
			"label": "dotnet_build",
			"type": "process",
			"command": "dotnet",
			"args": [
				"build",
				"${workspaceFolder}/netcore.sln",
				"/property:GenerateFullPaths=true",
				"/consoleloggerparameters:NoSummary"
			],
			"problemMatcher": "$msCompile"
		},
		{
			"label": "run_grpc_Server",
			"type": "shell",
			"command": "dotnet",
			"args": [
				"run",
				"--project",
				"netcoreServer",
				//"--no-launch-profile",
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": "$msCompile",
		},
		{
			"label": "run_grpc_Client",
			"type": "shell",
			"command": "dotnet",
			"args": [
				"run",
				"--project",
				"netcoreClient",
				"--",
				"Sync",
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": "$msCompile",
		},
		{
			"label": "run_grpc_ClientAsync",
			"type": "shell",
			"command": "dotnet",
			"args": [
				"run",
				"--project",
				"netcoreClient",
				"--",
				"Async",
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": "$msCompile",
		},
		{
			"label": "run_dtm_Client",
			"type": "shell",
			"command": "dotnet",
			"args": [
				"run",
				"--project",
				"netcoreClient",
				"--",
				"Dtm",
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": "$msCompile",
		},
		{
			// -p:PublishSingleFile=true 单文件发布
			// --self-contained true 将运行时包含在发布文件内
			// -p:DebugType=none -p:DebugSymbols=false 不生成pdb文件
			// -p:PublishTrimmed=true 剪裁
			// -p:EnableCompressionInSingleFile=true 启用压缩
			"label": "dotnet_publish",
			"type": "process",
			"command": "dotnet",
			"args": [
				"publish",
				"${workspaceFolder}/netcore.sln",
				"/property:GenerateFullPaths=true",
				"/consoleloggerparameters:NoSummary",
				"-p:PublishSingleFile=true",
				"-p:DebugType=none",
				"-p:DebugSymbols=false",
				"--self-contained",
				"true"
			],
			"problemMatcher": "$msCompile"
		},
	]
}
