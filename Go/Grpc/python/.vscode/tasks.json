{
	"version": "2.0.0",
	"options": { //tasks.json定义的所有内容都使用cmd运行
		"shell": {
			"executable": "cmd.exe",
			"args": [
				"/d",
				"/c"
			]
		},
		"env": { //自定义环境变量
			"PATH": "${env:path};D:\\Tools\\WorkTool\\Python\\Python312\\Scripts;D:\\Tools\\WorkTool\\Build\\buf",
		}
	},
	"tasks": [
		{
			"label": "buf_generate",
			"type": "shell",
			"command": "buf",
			"args": [
				"generate",
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [],
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": true,
				"panel": "new"
			}
		},
		{
			"label": "poetry_run_server",
			"type": "shell",
			"command": "poetry",
			"args": [
				"run",
				"python",
				"src\\server.py",
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [],
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": true,
				"panel": "new"
			}
		},
		{
			"label": "poetry_run_client",
			"type": "shell",
			"command": "poetry",
			"args": [
				"run",
				"python",
				"src\\client.py",
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [],
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": true,
				"panel": "new"
			}
		},
	]
}
