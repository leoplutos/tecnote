{
	"version": "2.0.0",
	"windows": {
		"options": { //tasks.json定义的所有内容都使用cmd运行
			"shell": {
				"executable": "cmd.exe",
				"args": [
					"/d",
					"/c"
				]
			},
			"env": { //自定义环境变量
				"PATH": "${env:path};D:\\Tools\\WorkTool\\Python\\Python312;D:\\Tools\\WorkTool\\Python\\Python312\\Scripts;D:\\Tools\\WorkTool\\Build\\buf",
			}
		},
	},
	"linux": {
		"options": { //tasks.json定义的所有内容都使用bash运行
			"shell": {
				"executable": "bash",
			},
			"env": { //自定义环境变量
			}
		},
	},
	"presentation": {
		"echo": true,
		"reveal": "always",
		"focus": true,
		"panel": "new"
	},
	"tasks": [
		{
			// uv sync 显式创建项目环境并安装依赖包
			"label": "uv_sync",
			"type": "shell",
			"command": "uv",
			"args": [
				"sync",
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [],
		},
		{
			"label": "buf_generate",
			"type": "shell",
			"command": "buf",
			"args": [
				"generate",
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [],
		},
		{
			"label": "uv_run_server",
			"type": "shell",
			"command": "uv",
			"args": [
				"run",
				"src/server.py",
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [],
		},
		{
			"label": "uv_run_client",
			"type": "shell",
			"command": "uv",
			"args": [
				"run",
				"src/client.py",
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [],
		},
	]
}
