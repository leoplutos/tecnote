{
	"version": "2.0.0",
	"windows": {
		"options": { //tasks.json定义的所有内容都使用cmd运行
			"shell": {
				"executable": "cmd.exe",
				"args": [
					"/d",
					"/c"
				]
			},
			"env": { //自定义环境变量
				"GOROOT": "D:\\Tools\\WorkTool\\Go\\go1.22.5.windows-amd64",
				"GOPATH": "D:\\Tools\\WorkTool\\Go\\go_global",
				"GO111MODULE": "on",
				"PATH": "${env:path};${env:GOROOT}\\bin;${env:GOPATH}",
			}
		},
	},
	"linux": {
		"options": { //tasks.json定义的所有内容都使用bash运行
			"shell": {
				"executable": "bash",
			},
			"env": { //自定义环境变量
				"GO111MODULE": "on",
			}
		},
	},
	"presentation": {
		"echo": true,
		"reveal": "always",
		"focus": true,
		"panel": "new"
	},
	"tasks": [
		{
			"label": "go_mod_tidy",
			"type": "shell",
			"command": "go",
			"args": [
				"mod",
				"tidy",
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [],
			"detail": "保持依赖整洁",
		},
		{
			"label": "go_build",
			"type": "shell",
			"command": "go",
			"args": [
				"build",
				"-o",
				"./bin/gosample",
				"./src/main.go",
			],
			"windows": {
				"command": "go",
				"args": [
					"build",
					"-o",
					"./bin/gosample.exe",
					"./src/main.go",
				],
			},
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [],
			"detail": "编译工程",
		},
		{
			"label": "go_run_hello",
			"type": "shell",
			"command": "go",
			"args": [
				"run",
				"./src/main.go",
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [],
			"detail": "运行hello示例",
		},
		{
			"label": "go_run_redis",
			"type": "shell",
			"command": "go",
			"args": [
				"run",
				"./src/main.go",
				"Redis",
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [],
			"detail": "运行Redis示例",
		},
		{
			"label": "go_run_etcd",
			"type": "shell",
			"command": "go",
			"args": [
				"run",
				"./src/main.go",
				"Etcd",
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [],
			"detail": "运行Etcd示例",
		},
		{
			"label": "go_run_postgre",
			"type": "shell",
			"command": "go",
			"args": [
				"run",
				"./src/main.go",
				"Postgre",
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [],
			"detail": "运行Postgre示例",
		},
	]
}
