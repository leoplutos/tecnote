{
	"compilerOptions": {
		"target": "ES2022",
		"module": "ES2022",
		"moduleResolution": "bundler",
		"declaration": true,
		"outDir": "dist",
		"rootDir": "src",
		"sourceMap": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		//"mapRoot": "maps",
		"esModuleInterop": true,
		"preserveConstEnums": true,
		"forceConsistentCasingInFileNames": true,
		"removeComments": true,
		"strict": true,
		"skipLibCheck": true
	},
	"include": [
		"./src/**/*"
	],
	"exclude": [
		"node_modules"
	]
}
