{
	"version": "2.0.0",
	"options": { //tasks.json定义的所有内容都使用cmd运行
		"shell": {
			"executable": "cmd.exe",
			"args": [
				"/d",
				"/c"
			]
		},
		"env": { //自定义环境变量
			"FASTIFY_AUTOLOAD_TYPESCRIPT": "1", //开启fastify-autoload对typescript的支持
			"PATH": "${env:path};D:/Tools/WorkTool/Web/bun-windows-x64"
		}
	},
	"tasks": [
		{
			"label": "bun_build",
			"type": "shell",
			"command": "bun",
			"args": [
				"run",
				"build",
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"detail": "bun x tsc -p tsconfig.json",
			"problemMatcher": [
				"$tsc"
			],
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": true,
				"panel": "new"
			},
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"label": "bun_dev",
			"type": "shell",
			"command": "bun",
			"args": [
				"run",
				"dev",
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"detail": "bun run src/index.ts",
			"problemMatcher": [],
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": true,
				"panel": "new"
			}
		},
		{
			"label": "bun_runRedisClientExample",
			"type": "shell",
			"command": "bun",
			"args": [
				"src/components/RedisClientExample.ts",
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"detail": "bun run src/components/RedisClientExample.ts",
			"problemMatcher": [],
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": true,
				"panel": "new"
			}
		},
		{
			"label": "bun_runEtcdClientExample.ts",
			"type": "shell",
			"command": "bun",
			"args": [
				"src/components/EtcdClientExample.ts",
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"detail": "bun run src/components/EtcdClientExample.ts",
			"problemMatcher": [],
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": true,
				"panel": "new"
			}
		},
	]
}
